<% include ../partials/header %>

  <div class = "container">
    <header class = "jumbotron">
        <div class = "container">
            <h1>Welcome to the 'Ed's Autos' Page!</h1>
            <p>The city's Go-to For Used Automobiles</p>
            <p>
                <a class= "btn btn-primary btn-lg" href = "/vehicles/new">Sell your car!</a>
            </p>
        </div>
    </header>
    
    <div class = "row">
        <div class = "col-lg-12">
            <h3>Available Autos</h3>
        </div>
    </div>
    
    <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
        <% vehicles.forEach(function(vehicle){ %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src = "<%= vehicle.image %>">
                    <div class = "caption">
                        <h4><%=vehicle.name%></h4>
                    </div>
                    <p>
                        <a href = "/vehicles/<%= vehicle._id %>" class = "btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>  
</div>
    
    

<% include ../partials/footer %>