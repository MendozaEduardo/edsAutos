<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align: center;">Add New Commment to <%= vehicle.name %></h1>
        <div style = "width: 30%; margin: 25px auto;">
            <form action = "/vehicles/<%= vehicle._id %>/comments" method = "POST">

                 <div class = "form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" placeholder = "text">
                 </div>
                
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
                <a  style = "text-align: center;" href = "/vehicles" >Go back to vehicle showpage</a>  
            </form>
        </div>
    </div>

</div>
